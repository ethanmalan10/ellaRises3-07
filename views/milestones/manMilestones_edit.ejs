<main class="main-content">
  <section class="container" style="margin-top:1.5rem; margin-bottom:2rem; display:flex; justify-content:center;">
    <div class="card" style="padding:32px; border-radius:18px; max-width:720px; width:100%;">
      <h1 style="margin:0 0 6px 0; font-family: var(--font-serif);">Edit Milestone</h1>
      <p style="margin:0 0 18px 0; color:#555;">Update the catalog entry.</p>

      <% if (error) { %>
        <div style="margin-bottom:14px; padding:10px 12px; border-radius:10px; background:#ffebee; color:#b71c1c;">
          <%= error %>
        </div>
      <% } %>

      <form method="POST" action="/admin/milestones/<%= item.id %>/edit" style="display:flex; flex-direction:column; gap:16px;">
        <div>
          <label for="title" style="display:block; margin-bottom:8px; font-weight:600;">Title</label>
          <input id="title" name="title" type="text" value="<%= item.title %>" required style="width:100%; padding:14px; border-radius:12px;" />
        </div>

        <div style="display:flex; gap:12px; flex-wrap:wrap;">
          <a href="/admin/milestones" style="text-decoration:none; padding:12px 16px; border-radius:10px; border:1px solid #ccc; color:#333; min-width:120px; text-align:center;">Cancel</a>
          <button type="submit" class="btn-login-home" style="padding:12px 18px; border-radius:10px; min-width:120px;">Save</button>
        </div>
      </form>
    </div>
  </section>
</main>
