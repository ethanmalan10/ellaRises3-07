<main class="container main-content" style="max-width:760px; margin-top:2.5rem;">
  <div class="card" style="padding:32px; border-radius:14px;">
    <h2 style="margin:0 0 1rem 0; font-family:var(--font-serif); color:var(--charcoal);">Create Event Template</h2>
    <p style="margin:0 0 1rem 0; color:#4b5563;">Define a reusable template (type, name, description, recurrence, default capacity).</p>

    <% if (error) { %>
      <div style="background:#ffe1e1; border:1px solid #dd9a9a; color:#7a2e2e; padding:12px 16px; border-radius:10px; margin-bottom:1rem;">
        <%= error %>
      </div>
    <% } %>

    <form method="POST" action="/event-templates" novalidate>
      <div style="margin-bottom:1rem;">
        <label style="font-weight:600; display:block; margin-bottom:.35rem;">Event Type</label>
        <select name="eventtypeid" required style="width:100%; padding:12px; border-radius:10px;">
          <option value="">Select a type</option>
          <% types.forEach(t => { %>
            <option value="<%= t.eventtypeid %>"><%= t.eventtypename %></option>
          <% }) %>
        </select>
      </div>

      <div style="margin-bottom:1rem;">
        <label style="font-weight:600; display:block; margin-bottom:.35rem;">Event Name</label>
        <input name="eventname" type="text" required style="width:100%; padding:12px; border-radius:10px;">
      </div>

      <div style="margin-bottom:1rem;">
        <label style="font-weight:600; display:block; margin-bottom:.35rem;">Description</label>
        <textarea name="eventdescription" rows="4" style="width:100%; padding:12px; border-radius:10px;"></textarea>
      </div>

      <div style="display:grid; grid-template-columns:repeat(auto-fit, minmax(220px, 1fr)); gap:12px; margin-bottom:1rem;">
        <div>
          <label style="font-weight:600; display:block; margin-bottom:.35rem;">Recurrence Pattern</label>
          <input name="eventrecurrencepattern" type="text" placeholder="e.g., Weekly, Monthly" style="width:100%; padding:12px; border-radius:10px;">
        </div>
        <div>
          <label style="font-weight:600; display:block; margin-bottom:.35rem;">Default Capacity</label>
          <input name="eventdefaultcapacity" type="number" min="1" placeholder="e.g., 100" style="width:100%; padding:12px; border-radius:10px;">
        </div>
      </div>

      <div style="display:flex; gap:12px; align-items:center; margin-top:1.2rem;">
        <button type="submit" class="btn-gradient" style="padding:12px 18px; border-radius:12px;">Create Template</button>
        <a href="/events" class="btn-cream" style="padding:10px 16px; border-radius:10px; text-decoration:none;">Cancel</a>
      </div>
    </form>
  </div>
</main>
