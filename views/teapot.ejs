      </svg>
    </div>
  </div>
</section>

  <script>
    (function () {
      const svg = document.getElementById('teapot-svg');
      if (!svg) return;
      svg.addEventListener('click', () => {
        if (svg.classList.contains('rolling')) return;
        svg.classList.remove('pouring');
        void svg.offsetWidth; // reset
        svg.classList.add('pouring');
        setTimeout(() => {
          svg.classList.remove('pouring');
          svg.classList.add('rolling');
        }, 900);
        // Keep it gone until page refresh
      });
    })();
  </script>
