<style>
  .teapot-page {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f6f8fb;
    padding: 36px 16px 52px;
  }
  .teapot-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 32px;
    align-items: center;
    background: #fff;
    border: 1px solid #e6e9ef;
    border-radius: 18px;
    padding: 32px 36px;
    box-shadow: 0 14px 40px rgba(0, 0, 0, 0.06);
    max-width: 980px;
    width: 100%;
  }
  .teapot-copy h1 {
    margin: 0 0 10px 0;
    font-size: 2.35rem;
    font-weight: 800;
    color: #111827;
  }
  .teapot-copy h1 span { color: #2f80ed; }
  .teapot-copy p {
    margin: 0 0 12px 0;
    color: #1f2937;
    font-weight: 600;
    line-height: 1.5;
  }
  .teapot-copy p.note { color: #4b5563; font-weight: 500; margin-bottom: 0; }
  .teapot-graphic { justify-self: center; }
  #teapot-svg {
    width: 260px;
    max-width: 100%;
    cursor: pointer;
    overflow: visible;
  }
  #body, #rim, #lid, #handle, #spout, #eyes, #gear-l, #gear-r, #mouth, #cup, #cup-shadow, #pour, #drop, #steam {
    transition: transform 0.45s ease, opacity 0.25s ease;
  }
  #cup-shadow { opacity: 0.6; }
  #pour, #drop { opacity: 0; }
  #teapot-svg.pouring #body,
  #teapot-svg.pouring #rim,
  #teapot-svg.pouring #lid,
  #teapot-svg.pouring #handle,
  #teapot-svg.pouring #spout,
  #teapot-svg.pouring #eyes,
  #teapot-svg.pouring #gear-l,
  #teapot-svg.pouring #gear-r,
  #teapot-svg.pouring #mouth {
    transform: rotate(-24deg) translate(-18px, -10px);
    transform-origin: 150px 120px;
  }
  #teapot-svg.pouring #pour {
    opacity: 1;
    animation: pour-line 1s ease-in-out forwards;
  }
  #teapot-svg.pouring #drop {
    opacity: 1;
    animation: drip 1s ease-in-out forwards;
  }
  #teapot-svg.pouring #steam { opacity: 0.12; }
  #teapot-svg.rolling {
    animation: roll-away 1.4s ease-in forwards;
    cursor: default;
    pointer-events: none;
  }
  @keyframes pour-line {
    0% { stroke-dashoffset: 110; opacity: 0; }
    12% { opacity: 1; }
    100% { stroke-dashoffset: 0; opacity: 1; }
  }
  @keyframes drip {
    0%   { transform: translate(0, -6px); opacity: 0; }
    25%  { opacity: 1; }
    100% { transform: translate(-6px, 42px); opacity: 0; }
  }
  @keyframes roll-away {
    0% { transform: translate(0, 0) rotate(0deg); opacity: 1; }
    40% { transform: translate(80px, -10px) rotate(120deg); }
    80% { transform: translate(240px, 20px) rotate(300deg); opacity: 0.8; }
    100% { transform: translate(380px, 30px) rotate(420deg); opacity: 0; }
  }
  @media (max-width: 820px) {
    .teapot-card { grid-template-columns: 1fr; text-align: center; }
    .teapot-graphic { justify-self: center; }
  }
</style>

<section class="teapot-page">
