<main class="container main-content" style="max-width:760px; margin-top:3rem;">
  <div class="card" style="padding:40px; border-radius:16px;">

    <h2 style="text-align:center; margin:0 0 1.5rem 0; font-family:var(--font-serif);">
      Create Account
    </h2>

    <!-- Error message -->
    <% if (typeof error !== "undefined" && error) { %>
      <div style="
        background:#ffe1e1;
        border:1px solid #dd9a9a;
        color:#7a2e2e;
        padding:12px 16px;
        border-radius:10px;
        margin-bottom:1.25rem;">
        <%= error %>
      </div>
    <% } %>

    <form action="/register" method="POST" novalidate>

      <!-- FIRST NAME -->
      <div style="margin-bottom:1rem;">
        <label style="font-weight:600; display:block; margin-bottom:.35rem;">First Name</label>
        <input
          name="firstName"
          type="text"
          required
          style="width:100%; padding:12px; border-radius:10px;">
      </div>

      <!-- LAST NAME -->
      <div style="margin-bottom:1rem;">
        <label style="font-weight:600; display:block; margin-bottom:.35rem;">Last Name</label>
        <input
          name="lastName"
          type="text"
          required
          style="width:100%; padding:12px; border-radius:10px;">
      </div>

      <!-- EMAIL -->
      <div style="margin-bottom:1rem;">
        <label style="font-weight:600; display:block; margin-bottom:.35rem;">Email</label>
        <input
          name="email"
          type="email"
          required
          style="width:100%; padding:12px; border-radius:10px;">
      </div>

      <!-- PASSWORD -->
      <div style="margin-bottom:1rem;">
        <label style="font-weight:600; display:block; margin-bottom:.35rem;">Password</label>
        <input
          name="password"
          type="password"
          required
          style="width:100%; padding:12px; border-radius:10px;">
      </div>

      <!-- CONFIRM PASSWORD -->
      <div style="margin-bottom:1rem;">
        <label style="font-weight:600; display:block; margin-bottom:.35rem;">Confirm Password</label>
        <input
          name="confirmPassword"
          type="password"
          required
          style="width:100%; padding:12px; border-radius:10px;">
      </div>

      <!-- DATE OF BIRTH -->
      <div style="margin-bottom:1rem;">
        <label style="font-weight:600; display:block; margin-bottom:.35rem;">Date of Birth</label>
        <input
          name="dob"
          type="date"
          required
          style="width:100%; padding:12px; border-radius:10px;">
      </div>

      <!-- SCHOOL OR JOB NAME -->
      <div style="margin-bottom:1rem;">
        <label style="font-weight:600; display:block; margin-bottom:.35rem;">
          School Name / Job Name
        </label>
        <input
          name="schoolOrJob"
          type="text"
          style="width:100%; padding:12px; border-radius:10px;">
      </div>

      <!-- PHONE NUMBER -->
      <div style="margin-bottom:1rem;">
        <label style="font-weight:600; display:block; margin-bottom:.35rem;">Phone Number</label>
        <input
          name="phone"
          type="text"
          style="width:100%; padding:12px; border-radius:10px;">
      </div>

      <!-- CITY / STATE / ZIP -->
      <div style="display:flex; gap:12px; margin-bottom:1.2rem;">
        <div style="flex:1;">
          <label style="font-weight:600; display:block; margin-bottom:.35rem;">City</label>
          <input name="city" type="text" style="width:100%; padding:12px; border-radius:10px;">
        </div>
        <div style="flex:1;">
          <label style="font-weight:600; display:block; margin-bottom:.35rem;">State</label>
          <input name="state" type="text" style="width:100%; padding:12px; border-radius:10px;">
        </div>
        <div style="flex:1;">
          <label style="font-weight:600; display:block; margin-bottom:.35rem;">Zipcode</label>
          <input name="zipcode" type="text" style="width:100%; padding:12px; border-radius:10px;">
        </div>
      </div>

      <!-- INTERESTS CHECKBOXES -->
      <div style="margin-bottom:1.25rem;">
        <label style="font-weight:600; display:block; margin-bottom:.45rem;">
          What are your interests in this program?
        </label>

        <div style="display:flex; gap:18px;">

          <label style="display:flex; align-items:center; gap:6px;">
            <input type="checkbox" name="interest_arts" value="true">
            Arts
          </label>

          <label style="display:flex; align-items:center; gap:6px;">
            <input type="checkbox" name="interest_stem" value="true">
            STEM
          </label>

          <label style="display:flex; align-items:center; gap:6px;">
            <input type="checkbox" name="interest_both" value="true">
            Both
          </label>

        </div>
      </div>

      <!-- SUBMIT BUTTON -->
      <button
        type="submit"
        class="btn-gradient"
        style="width:100%; padding:14px; font-size:1.05rem; border-radius:12px;">
        Create Account
      </button>

      <!-- LINK TO LOGIN -->
      <div style="text-align:center; margin-top:1rem;">
        <a href="/login" style="text-decoration:none; font-weight:600; color:var(--charcoal); opacity:.8;">
          Already have an account? Login
        </a>
      </div>

    </form>

  </div>
</main>