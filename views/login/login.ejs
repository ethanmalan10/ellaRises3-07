<main class="container main-content" style="max-width: 640px; margin-top: 3.5rem;">
  <div class="card" style="padding: 40px; border-radius: 16px;">

    <h2 style="
      text-align:center;
      margin: 0 0 1.25rem 0;
      font-family: var(--font-serif);
      color: var(--charcoal);
    ">
      Login
    </h2>

    <!-- Success note (after account creation) -->
    <% if (typeof created !== 'undefined' && created) { %>
      <div style="
        background:#e8faef;
        border:1px solid #9bd3b3;
        color:#205e37;
        padding:12px 16px;
        border-radius:10px;
        margin-bottom:1.25rem;">
        <%= created %>
      </div>
    <% } %>

    <!-- Error note (bad credentials, etc.) -->
    <% if (typeof error !== 'undefined' && error) { %>
      <div style="
        background:#ffe1e1;
        border:1px solid #dd9a9a;
        color:#7a2e2e;
        padding:12px 16px;
        border-radius:10px;
        margin-bottom:1.25rem;">
        <%= error %>
      </div>
    <% } %>

    <form method="POST" action="/login" novalidate>
      <div style="margin-bottom: 1rem;">
        <label for="email" style="font-weight:600; display:block; margin-bottom:.4rem;">Email</label>
        <input
          id="email"
          name="email"
          type="email"
          autocomplete="email"
          required
          style="width:100%; padding:12px; border-radius:10px;"
        />
      </div>

      <div style="margin-bottom: 1.25rem;">
        <label for="password" style="font-weight:600; display:block; margin-bottom:.4rem;">Password</label>
        <input
          id="password"
          name="password"
          type="password"
          autocomplete="current-password"
          required
          style="width:100%; padding:12px; border-radius:10px;"
        />
      </div>

      <!-- Green primary button (matches the home/Login style) -->
      <button
        type="submit"
        class="btn-login-home"
        style="width:100%; padding:14px; font-size:1.05rem; border-radius:12px;"
      >
        Login
      </button>

      <div style="display:flex; justify-content:space-between; align-items:center; margin-top:1rem; gap:12px; flex-wrap:wrap;">
        <a href="#" style="text-decoration:none; font-weight:600; color:var(--charcoal); opacity:.75;">
          Forgot password?
        </a>

        <!-- Always goes to /register -->
        <a
          href="/login/register"
          class="btn-cream"
          style="padding:10px 18px; border-radius:10px; text-decoration:none;"
        >
          Create New Account
        </a>
      </div>
    </form>

  </div>
</main>