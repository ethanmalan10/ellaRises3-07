<style>
  body{
    background: url('/images/ER UMFA Mural_072.jpg') center/cover no-repeat fixed !important;
  }
</style>

<main class="main-content" style="padding: 40px 0 120px; min-height: 100vh;">
  <section class="container" style="margin-top:4rem; display:flex; flex-direction:column; align-items:center; gap:16px;">
    <div class="card" style="padding:32px; border-radius:18px; max-width:440px; width:100%; margin:16px auto 0; backdrop-filter:blur(2px);">

      <h1 style="
        margin:0 0 .75rem 0;
        text-align:center;
        font-family: var(--font-serif);
        font-size:2.2rem;
        color:var(--charcoal);
      ">
        Make a Donation
      </h1>

      <p style="text-align:center; margin:0 0 1.75rem 0; font-size:1.05rem;">
        Thank you for supporting Ella Rises. Every contribution fuels mentorships, workshops, and opportunities.
      </p>

      <form method="POST" action="/donations" style="display:flex; flex-direction:column; gap:16px;">
        <% const loggedIn = !!currentUser; %>
        <% const p = typeof participant !== 'undefined' && participant ? participant : null; %>
        <% if (loggedIn && p) { %>
          <div style="display:grid; grid-template-columns:repeat(auto-fit, minmax(180px,1fr)); gap:14px;">
            <div>
              <label style="display:block; margin-bottom:6px; font-weight:600;">First Name</label>
              <input
                type="text"
                value="<%= p.participantfirstname || '' %>"
                readonly
                style="width:100%; padding:12px; border-radius:10px; box-sizing:border-box; background:#f4f4f5; cursor:not-allowed;"
              >
            </div>
            <div>
              <label style="display:block; margin-bottom:6px; font-weight:600;">Last Name</label>
              <input
                type="text"
                value="<%= p.participantlastname || '' %>"
                readonly
                style="width:100%; padding:12px; border-radius:10px; box-sizing:border-box; background:#f4f4f5; cursor:not-allowed;"
              >
            </div>
          </div>
        <% } %>

        <!-- Email -->
        <div>
          <label for="email" style="display:block; margin-bottom:6px; font-weight:600;">
            Email
          </label>
          <input
            id="email"
            name="email"
            type="email"
            required
            value="<%= (p && p.participantemail) ? p.participantemail : '' %>"
            style="width:100%; padding:12px; border-radius:10px;"
          >
        </div>

        <!-- Donation Amount -->
        <div>
          <label for="donationAmount" style="display:block; margin-bottom:6px; font-weight:600;">
            Donation Amount (USD)
          </label>
          <input
            id="donationAmount"
            name="donationAmount"
            type="number"
            min="1"
            required
            style="width:100%; padding:12px; border-radius:10px;"
          >
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="btn-login-home"
          style="width:100%; margin-top:10px; padding:14px; font-size:1.15rem; border-radius:12px;"
        >
          Place Donation
        </button>

        <!-- Cancel -->
        <div style="text-align:center; margin-top:8px;">
          <a
            href="/"
            style="text-decoration:none; font-weight:600; color:var(--charcoal); opacity:.75;"
          >
            Cancel
          </a>
        </div>

      </form>

    </div>
  </section>
</main>
