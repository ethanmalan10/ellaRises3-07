<main class="main-content">
  <section class="container" style="margin-top:1.25rem;">
    <div class="card" style="padding:32px; border-radius:18px; max-width:680px; margin:0 auto;">

      <h1 style="
        margin:0 0 .75rem 0;
        text-align:center;
        font-family: var(--font-serif);
        font-size:2.2rem;
        color:var(--charcoal);
      ">
        Make a Donation
      </h1>

      <p style="text-align:center; margin:0 0 1.75rem 0; font-size:1.05rem;">
        Thank you for supporting Ella Rises. This is a placeholder form.
      </p>

      <form method="POST" action="/donations" style="display:flex; flex-direction:column; gap:16px;">

        <!-- Full Name -->
        <div>
          <label for="fullName" style="display:block; margin-bottom:6px; font-weight:600;">
            Full Name
          </label>
          <input
            id="fullName"
            name="fullName"
            type="text"
            required
            style="width:100%; padding:12px; border-radius:10px;"
          >
        </div>

        <!-- Email -->
        <div>
          <label for="email" style="display:block; margin-bottom:6px; font-weight:600;">
            Email
          </label>
          <input
            id="email"
            name="email"
            type="email"
            required
            style="width:100%; padding:12px; border-radius:10px;"
          >
        </div>

        <!-- Donation Amount -->
        <div>
          <label for="donationAmount" style="display:block; margin-bottom:6px; font-weight:600;">
            Donation Amount (USD)
          </label>
          <input
            id="donationAmount"
            name="donationAmount"
            type="number"
            min="1"
            required
            style="width:100%; padding:12px; border-radius:10px;"
          >
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="btn-login-home"
          style="width:100%; margin-top:10px; padding:14px; font-size:1.15rem; border-radius:12px;"
        >
          Place Donation
        </button>

        <!-- Cancel -->
        <div style="text-align:center; margin-top:8px;">
          <a
            href="/"
            style="text-decoration:none; font-weight:600; color:var(--charcoal); opacity:.75;"
          >
            Cancel
          </a>
        </div>

      </form>

    </div>
  </section>
</main>