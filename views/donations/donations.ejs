<main class="main-content">
  <section class="container" style="margin-top:1.25rem;">
    <div class="card" style="padding:28px; border-radius:18px; max-width:680px; margin:0 auto;">
      <h1 style="margin:0 0 .5rem 0; text-align:center; font-family: var(--font-serif);">
        Make a Donation
      </h1>
      <p style="text-align:center; margin:0 0 1.25rem 0;">
        Thank you for supporting Ella Rises. This is a placeholder form.
      </p>

      <form method="POST" action="/donations/pledge" novalidate>
        <div style="display:flex; flex-direction:column; gap:12px;">
          <div>
            <label for="fullName" style="display:block; margin-bottom:6px; font-weight:600;">Full Name</label>
            <input id="fullName" name="fullName" type="text" required
                   style="width:100%; padding:12px; border-radius:10px;">
          </div>

          <div>
            <label for="email" style="display:block; margin-bottom:6px; font-weight:600;">Email</label>
            <input id="email" name="email" type="email" required
                   style="width:100%; padding:12px; border-radius:10px;">
          </div>

          <div>
            <label for="amount" style="display:block; margin-bottom:6px; font-weight:600;">Donation Amount (USD)</label>
            <input id="amount" name="amount" type="number" min="1" required
                   style="width:100%; padding:12px; border-radius:10px;">
          </div>
        </div>

        <button type="submit" class="btn-login-home"
                style="width:100%; margin-top:18px; padding:14px; font-size:1.1rem;">
          Place Donation
        </button>

        <div style="text-align:center; margin-top:10px;">
          <a href="/" style="text-decoration:none; font-weight:600; color:var(--charcoal); opacity:.75;">
            Cancel
          </a>
        </div>
      </form>
    </div>
  </section>
</main>